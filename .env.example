# Example .env for Scrimverse backend
# Copy to `.env` and fill values before running the app.

# Django / app
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL (used by docs, redirects, or client-side defaults)
FRONTEND_URL=http://localhost:3000

# Database (Postgres)
DB_NAME=scrimverse_db
DB_USER=postgres
DB_PASSWORD=1234
DB_HOST=localhost
DB_PORT=5432

# Use S3 for static/media? (True/False)
USE_S3=False

# AWS S3 (only if USE_S3=True)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=ap-south-2

# JWT / Auth
JWT_SECRET_KEY=
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS & CSRF (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis (cache + celery broker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=300

# Email (defaults to console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=email-smtp.ap-south-2.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@qodet.com
SUPPORT_EMAIL=kishan@qodet.com
ADMIN_EMAIL=kishan@qodet.com

# PhonePe / Payment Gateway
# CLIENT_ID / CLIENT_SECRET are required for PhonePe SDK in production
CLIENT_ID=dymmy
CLIENT_SECRET=dummy
CLIENT_VERSION=1
PHONEPE_ENV=SANDBOX  # or PRODUCTION

# PhonePe callback basic auth (optional)
PHONEPE_CALLBACK_USERNAME=
PHONEPE_CALLBACK_PASSWORD=

# Google OAuth (for social login)
GOOGLE_CLIENT_ID=

DJANGO_DEBUG="True"